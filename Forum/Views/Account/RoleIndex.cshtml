@{
    ViewBag.Title = "Role Index";
}

<fieldset>
    <legend>Role Index</legend>
    <br />
    <table style="width: 30%">
        <tr>
            <th>Role</th>
            <th>Delete</th>
        </tr>

        @foreach (string s in Model)
        {
            <tr>
                <td>
                    @s
                </td>
                <td>
                    <span onclick="return confirm('Are you sure you wish to delete this Role name: ' + '@s' + '?')">
                        <a href="/Account/RoleDelete?RoleName=@s" class="delLink">Delete</a>
                    </span>
                </td>
            </tr>
        }
    </table>
    <br />
    @Html.ActionLink("Create", "RoleCreate") | @Html.ActionLink("Back", "RoleAddToUser", "Account")
</fieldset>