@{
    ViewBag.Title = "Role Add To User";
}

<fieldset>
    <legend>Get Roles of User</legend>
    @using (Html.BeginForm("GetRoles", "Account"))
    {
        @Html.AntiForgeryToken()
        <br />
        <div>
            Find User: @Html.TextBox("UserName")
            <input type="submit" value="Get User Roles" /> <p class="message-success">@ViewBag.ResultMessage_GetRoles</p>
        </div>
    }

    @if (ViewBag.RolesForThisUser != null)
    {
        <text>
            <h3>Roles for this user</h3>
            <ol>
                @foreach (string s in ViewBag.RolesForThisUser)
                {
                    <li>@s</li>
                }
            </ol>
        </text>
    }
</fieldset>

<fieldset>
    <legend>Add role to User</legend>
    @using (Html.BeginForm("RoleAddToUser", "Account"))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <br />
        <div>
            Find User: @Html.TextBox("UserName")
            Role Name: @Html.DropDownList("RoleName", ViewBag.Roles as SelectList)
            <input type="submit" value="Save" /> <p class="message-success">@ViewBag.ResultMessage_RoleAddToUser</p>
        </div>
    }
</fieldset>

<fieldset>
    <legend>Delete role of the User</legend>  
    @using (Html.BeginForm("DeleteRoleForUser", "Account"))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <br />
        <div>
            Find User: @Html.TextBox("UserName")
            Role Name: @Html.DropDownList("RoleName", ViewBag.Roles as SelectList)
            <input type="submit" value="Delete" /> <p class="message-success">@ViewBag.ResultMessage_DeleteRoleForUser</p>
        </div>
    }
    <br />
    @Html.ActionLink("Role Index", "RoleIndex") | @Html.ActionLink("Back", "Index", "Home")
</fieldset>
