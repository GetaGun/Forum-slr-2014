@model Forum.Models.Messages
@{
    ViewBag.Title = "Edit Message";
}

<fieldset>
    <legend>Edit Message</legend>
    @using (Html.BeginForm("Edit", "Message", new { QuestionId = ViewBag.QuestionId }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true);
        <div>
            <div class="editor-field">
                @Html.HiddenFor(m => m.QuestionId)
            </div>
            <div class="editor-field">
                @Html.HiddenFor(m => m.UserId)
            </div>
            <div class="editor-label">
                <b>Message Description</b>
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(m => m.MessageText, new { @rows = "10" })
                @Html.ValidationMessageFor(m => m.MessageText)
            </div>
            <div class="editor-label">
                <b>Date</b>
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Date, new { Value = System.DateTime.Now.ToString("dd-MM-yyyy") })
                @Html.ValidationMessageFor(m => m.Date)
            </div><br />
            <input type="submit" value="Edit" /> | @Html.ActionLink("Back", "Details", "Home", new { id = ViewBag.QuestionId }, null)
        </div>
    }
</fieldset>
