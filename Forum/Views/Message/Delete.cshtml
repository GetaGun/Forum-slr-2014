@model Forum.Models.Messages

@{
    ViewBag.Title = "Delete Message";
}

<fieldset>
    <legend>Delete Confirmation</legend>
    <p>Are you sure you want to delete this message?</p>
    @using (Html.BeginForm())
    {
        <p>
            <input type="submit" value="Delete" /> | @Html.ActionLink("Back", "Details", "Home", new { id = ViewBag.QuestionId }, null)
        </p>
    }
</fieldset>
