@model Forum.Models.Questions
@{
    ViewBag.Title = "Edit Question";
}
<fieldset>
<legend>Edit Question</legend>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true);
    <div>
        <div class="editor-label">
            <b>Question Name</b>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.QuestionName)
            @Html.ValidationMessageFor(n => n.QuestionName)
        </div>
        <div class="editor-label">
             <b>Question Group</b>
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(q => q.QuestionGroupId, (SelectList)ViewBag.QuestionGroupSelected, String.Empty)
            @Html.ValidationMessageFor(q => q.QuestionGroupId)
        </div>
        <div class="editor-label">
             <b>Question Description</b>
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(q => q.QuestionDescription, new { @rows="10" })
            @Html.ValidationMessageFor(q => q.QuestionDescription)
        </div>
	    <div class="editor-label">
            <b>Question Keyword</b>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.QuestionKeyword)
            @Html.ValidationMessageFor(n => n.QuestionKeyword)
        </div>
        <div class="editor-label">
            <b>Date and Time</b>
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(q => q.DateTime)
            @Html.ValidationMessageFor(q => q.DateTime)
        </div>
        <br />
        <input type="submit" value="Edit" /> | @Html.ActionLink("Back", "Index")
    </div>
}
</fieldset>